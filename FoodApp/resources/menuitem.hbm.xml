<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.example.domain.MenuItem" table="MENUITEM">
        <id name="itemId" column="item_id">
            <generator class="native"/>
        </id>
        <property name="itemName" column="item_name"/>
        <property name="description" column="description"/>
        <property name="price" column="price"/>
        <property name="imageURL" column="image_url"/>
        <property name="Available" column="is_available"/>
    </class>
</hibernate-mapping>
